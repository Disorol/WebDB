@model UserReg
@{
    ViewData["Title"] = "Регистрация";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand">Ведомость</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Авторизация</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignUp">Регистрация</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <div class="reg-form-div">
            <h1 class="reg-form-h1">@ViewData["Title"]</h1>
        </div>

        <div>
            <form method="post" asp-controller="Home" asp-action="Check2">
                <div class="form-string">
                    <label asp-for="Login"></label>
                    <br />
                    <input asp-for="Login" />
                    <span asp-validation-for="Login"></span>
                </div>

                <br />

                <div class="form-string">
                    <label asp-for="Password"></label>
                    <br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <br />

                <div class="form-string">
                    <label asp-for="PasswordConfirm"></label>
                    <br />
                    <input asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>

                <div class="form-button">
                    <input type="submit" value="Подтвердить" />
                </div>
            </form>
        </div>
    </main>
</div>