@model List<History>
@{
    ViewData["Title"] = "Таблица";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand">Ведомость</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark">Добро пожаловать, @TempData["Login"]!</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Выход</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <main role="main" class="pb-3">
                <table class="historyTable">
                    <thead>
                        <tr>
                            <th colspan="5" class="not-rotate-th"><h1>История изменений</h1></th>
                        </tr>
                        <tr>
                            <th colspan="1" class="not-rotate-th"><h2>№</h2></th>
                            <th colspan="1" class="not-rotate-th"><h2>Имя пользователя</h2></th>
                            <th colspan="1" class="not-rotate-th"><h2>Тип изменения</h2></th>
                            <th colspan="1" class="not-rotate-th"><h2>Дата изменённой таблицы</h2></th>
                            <th colspan="1" class="not-rotate-th"><h2>Дата изменения</h2></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>
                                    <h2>
                                        @i.Id
                                    </h2>
                                </td>
                                <td>
                                    <h2>
                                        @i.Username
                                    </h2>
                                </td>
                                <td>
                                    <h2>
                                        @i.TypeOfChange
                                    </h2>
                                </td>
                                <td>
                                    <h2>
                                         @i.TableDate
                                    </h2>
                                </td>
                                <td>
                                    <h2>
                                        @i.DatetimeOfChange
                                    </h2>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        <form method="post" asp-controller="Home" asp-action="CheckComeBack">
            <div class="div-back-input">
                <input type="submit" value="Вернуться" />
            </div>
        </form>
    </main>
</div>